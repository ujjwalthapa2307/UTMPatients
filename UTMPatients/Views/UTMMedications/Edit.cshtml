@model UTMPatients.Models.Medication

@{
    ViewData["Title"] = "Edit medication for " + Model.MedicationType.Name;
}

<h1>@ViewData["Title"]</h1>

<h4>Medication</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Din" />
            <input type="hidden" asp-for="ConcentrationCode" value="@Model.ConcentrationCode" />
            <input type="hidden" asp-for="MedicationTypeId" value="@Model.MedicationType.MedicationTypeId" />
            <div class="form-group">
                <label asp-for="Din" class="control-label"></label>
                <input readonly asp-for="Din" class="form-control" />
                <span asp-validation-for="Din" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DispensingCode" class="control-label"></label>
                <select asp-for="DispensingCode" class="form-control" asp-items="ViewBag.DispensingCode"></select>
                <span asp-validation-for="DispensingCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Concentration" class="control-label"></label>
                <input readonly asp-for="Concentration" class="form-control" />
                <span asp-validation-for="Concentration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConcentrationCode" class="control-label"></label>
                <select disabled asp-for="ConcentrationCode" class="form-control" asp-items="ViewBag.ConcentrationCode"></select>
                <span asp-validation-for="ConcentrationCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-medId="@Model.MedicationType.MedicationTypeId" asp-route-medName="@Model.MedicationType.Name">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
